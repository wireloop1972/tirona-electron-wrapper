{
  "name": "tirona-electron-wrapper",
  "version": "1.0.0",
  "description": "Electron wrapper for Tirona Next.js application",
  "repository": {
    "type": "git",
    "url": "https://github.com/wireloop1972/tirona-electron-wrapper.git"
  },
  "main": "dist/main.js",
  "author": "Tirona",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "tsc && electron .",
    "build": "tsc",
    "start": "npm run build && cross-env ELECTRON_PROD=true electron .",
    "package": "npm run build && electron-builder --win --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "lint": "eslint src --ext .ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.tirona.electronwrapper",
    "productName": "Tirona",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "config.json",
      "src/splash.html",
      "assets/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
